
<%= image_tag obj.image_url, class: "img-responsive" %>
<div class="container">
  <div class="row col-xs-12">
    <div class="col-xs-4">
      <h4>$<%= @course.price %></h4>
    </div>
    <div class="col-xs-4">
      <h4><%= obj.duration %>hrs</h4>
    </div>
    <% if obj.user == current_user %>
    </div class="row col-xs-6">
      <div class="col-xs-6">
        <%= link_to "edit", edit_course_path(obj), class: "btn btn-default btn-sm" %>
        <%= link_to "delete", "#", class: "btn btn-default btn-sm" %>
      </div>
    </div>
    <% else %>
    <div class="col-xs-4">
      <%= link_to "book", "#", class: "btn btn-default btn-sm" %>
    </div>
      <% end %>
  </div>
</div>
<div class="container">
  <h3><%= obj.title %></h3>
  <h4>Description</h4>
  <p><%= obj.description %></p>
  <h4>About teacher</h4>
  <p><%= obj.about_teacher %></p>
  <h4>Notes</h4>
  <p><%= obj.notes %></p>
  <div class="map_embed">
    <%= render 'map_embed', lat: obj.lat, lng: obj.lng %>
  </div>
  <h4><%= obj.address %></h4>
  <h5><%= obj.city %></h5>
</div>