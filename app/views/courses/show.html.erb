<%= image_tag @course.image_url, class: "img-responsive" %>
<div class="container">
  <div class="row col-xs-12">
    <div class="col-xs-4">
      <h4>$<%= @course.price %></h4>
    </div>
    <div class="col-xs-4">
      <h4><%= @course.duration %>hrs</h4>
    </div>
    <div class="col-xs-4">
      <%= link_to "book", "#", class: "btn btn-default btn-lg" %>
  </div>
</div>
<div class="container">
  <h3><%= @course.title %></h3>
  <h4>Description</h4>
  <p><%= @course.description %></p>
  <h4>About teacher</h4>
  <p><%= @course.about_teacher %></p>
  <h4>Notes</h4>
  <p><%= @course.notes %></p>
  <div class="map_embed">
    <%= render 'map_embed', lat: @course.lat, lng: @course.lng %>
  </div>
</div>