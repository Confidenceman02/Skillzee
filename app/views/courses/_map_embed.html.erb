<div class="map">
<%#Stop the auto scroll of map embed%>
  <div class="overlay" onClick="style.pointerEvents='none'"></div>
  <%= content_tag :iframe, '',
    src: "https://maps.google.com/maps?" + {
      q: "#{ lat },#{ lng }",
      output: 'embed'
    }.to_query,
    frameborder: 0,
    width: 500,
    height: 500,
    allowfullscreen: true,
    scrollwheel: false
  %>
</div>