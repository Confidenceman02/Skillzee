
  <%#auto-slide disabled so user can navigate courses via button %>
  <%# id is unique so that carousel sliders can be controlled independantly %>
  <div id="<%= category.downcase %>_carousel" class="carousel slide" data-ride="carousel" data-interval="false">
    <!-- Wrapper for slides -->
    <%#Carousel will only display courses related to a particular category%>
    <div class="carousel-inner carousel_image_wrap">
    <% categories.category_picker(category).courses.each_with_index do |course, index| %>
      <div class="item <%= index == 0 ? 'active' : '' %>">
        <%= image_tag course.image_url %>
        <div class="carousel-caption">
          <h3><%= course.title %></h3>
        </div>
      </div>
    <% end %>
    </div>
    <!-- Controls -->
    <a id="<%= category.downcase %>_carousel" class="left carousel-control" href="#<%= category.downcase %>_carousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a id="<%= category.downcase %>_carousel" class="right carousel-control" href="#<%= category.downcase %>_carousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div> <!-- Carousel -->
