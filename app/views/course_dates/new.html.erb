<div class="container">
  <div class="row col-xs-10">
      <h1>Add course dates</h1>
    <div class="col-xs-5">
      <%= form_for [@course, @date] do |f| %>
      <%= f.date_select :date %>
    </div>
    <div class="col-xs-5">
      <%= f.time_select :time %>
      <%= f.submit "add", class: "btn btn-default btn-xs" %>
      <% end %>
    </div>
  </div>
</div>
<% @dates.each do |date| %>
  <table class="table">
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Time</th>
    </tr>
    <tr>
      <td><%= @course.title %></td>
      <td><%= date.date %></td>
      <td><%= date.time %></td>
    </tr>
  </table>
<% end %>