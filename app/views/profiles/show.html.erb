
<% if @profile.image_data %>
  <div class="profile_img_container">
    <%= image_tag @profile.image_url, class: "profile_img" %>
  </div>
  <% else %>
  <% end %>
<div class="container">
  <h1 align="center"><%= @profile.first_name %></h1>
  <%#expand section%>
    <input id="toggle" type="checkbox">
    <label class="btn btn-default btn-lg btn-block courses_btn" for="toggle"><h3>Your courses</h3></label>
  <div id="expand">
  <% @paid_bookings.each do |booking| %>
    <table class="table table-responsive booking_table">
      <tr>
        <th>Course</th>
        <th>Date</th>
        <th>Time</th>
      </tr>
      <tr>
        <td><%= booking.course_date.course.title %></td>
        <td><%= booking.course_date.date %></td>
        <td><%= booking.course_date.time.strftime("%H:%I") %></td>
      </tr>
    </table>
    <br>
  <% end %>
  </div>
</div>